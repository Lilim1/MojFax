<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <Button
        android:id="@+id/chating1"

        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_rounded"
        android:onClick="chat1"
        android:text="Chataj sa faxom"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="528dp" />

    <Button
        android:id="@+id/chating2"

        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_rounded"
        android:onClick="chat2"
        android:text="Chataj sa odsjekom"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="528dp" />

    <Button
        android:id="@+id/chating3"

        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_rounded"
        android:onClick="chat3"
        android:text="Chataj sa godinom"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="528dp" />
</LinearLayout>