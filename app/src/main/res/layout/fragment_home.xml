<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical">

    <Button
        android:id="@+id/obavijesti1"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_rounded2"
        android:onClick="obavijesti1"
        android:text="Nove obavijesti na fakultetu"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="528dp" />

    <Button
        android:id="@+id/obavijesti2"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_rounded2"
        android:onClick="obavijest2"
        android:text="Nove obavijesti na odsjeku"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="528dp" />

    <Button
        android:id="@+id/obavijesti3"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_rounded2"
        android:onClick="obavijest3"
        android:text="Nove obavijesti na godini"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="528dp" />
</LinearLayout>